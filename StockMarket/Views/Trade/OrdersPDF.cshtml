@model IEnumerable<IOrderResponse>
@{
    Layout = null;
}

<link href="@("http://" + Context.Request.ToString() + "/StyleSheet.css")" rel="stylesheet" />

<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Date & Time</th>
            <th>Stock</th>
            <th>OrderType</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Trade Amount</th>
        </tr>
    </thead>

    <tbody>
        @foreach(IOrderResponse orderResponse in Model)
        {
            <tr>
                <td style="width:18%">@orderResponse.DateAndTimeOfOrder.ToString("dd MMMM yyyy hh:mm:ss tt")</td>
                <td style="width:20%">@orderResponse.StockName (@orderResponse.StockSymbol)</td>
                <td style="width:10%">@orderResponse.TypeOfOrder.ToString()</td>
                <td style="width:9%">@orderResponse.Quantity</td>
                <td style="width:9%">@orderResponse.Price.ToString("N")</td>
                <td style="width:13%">@orderResponse.TradeAmount.ToString("N")</td>
            </tr>
        }
    </tbody>
</table>